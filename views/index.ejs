      label,
      input[type="password"] {
        display: block;
        width: 100%;
        margin-bottom: 10px;
        border: none;
        border-bottom: 1px solid #ccc;
        padding: 10px;
        font-size: 16px;
      }
      input[type="submit"] {
        background-color: #007bff;
        border: none;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
      }
      input[type="submit"]:hover {
        background-color: #0069d9;
      }
      .error {
        color: red;
        font-weight: bold;
        margin-top: 10px;
      }
    </style>
